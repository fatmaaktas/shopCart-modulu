<!doctype html>
html(lang="en")
head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
    title Ürün Ekle

body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
        .container
            a(href="/").navbar-brand Alışveriş
        
    .container(style="padding-top: 100px")
        .row
            .col-lg-3
                .list-group
                    a(href="").list-group-item Alışveriş Yap
                    a(href="/").list-group-item Sepetim
            .col-lg-9
                .row 
                    .col-md-4 
                        img(src=`/img/${product.imageUrl}` alt=`${product.description}`)
                        .img-fluid 
                    .col-md-8 
                        br
                        h2 #{product.name}
                        hr
                        p #{product.description}
                        br
                        p price: #{product.price}
                        button(type="submit").btn.btn-primary.btn-lg Sepete Ekle

              
    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
